{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "../dist", // Adjusted to be relative to new baseUrl/rootDir
    "rootDir": ".", // Root is now the backend directory
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".", // Base for path resolution is backend directory
    "paths": {
      "@data/*": ["../src/data/*"] // Path relative to backend directory
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
